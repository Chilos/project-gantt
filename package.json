{
  "name": "logseq-plugin-project-gantt",
  "version": "0.1.7",
  "description": "Интерактивная диаграмма Ганта для управления проектами в Logseq",
  "main": "dist/index.js",
  "scripts": {
    "build": "node scripts/update-version.js && esbuild src/index.ts --bundle --outfile=dist/index.js --external:@logseq/libs --format=iife --global-name=ProjectGanttPlugin --loader:.css=text --sourcemap",
    "build:release": "node scripts/update-version.js && esbuild src/index.ts --bundle --outfile=dist/index.js --external:@logseq/libs --format=iife --global-name=ProjectGanttPlugin --loader:.css=text --minify",
    "dev": "esbuild src/index.ts --bundle --outfile=dist/index.js --external:@logseq/libs --format=iife --global-name=ProjectGanttPlugin --loader:.css=text --sourcemap --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "update-version": "node scripts/update-version.js"
  },
  "keywords": [
    "logseq",
    "plugin",
    "gantt",
    "project-management",
    "planning",
    "timeline"
  ],
  "author": "",
  "license": "MIT",
  "logseq": {
    "id": "logseq-plugin-project-gantt",
    "title": "Project Gantt",
    "icon": "./icon.svg",
    "main": "dist/index.js",
    "version": "0.1.0"
  },
  "devDependencies": {
    "@logseq/libs": "^0.0.17",
    "@types/node": "^24.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.19.0",
    "happy-dom": "^17.6.1",
    "jsdom": "^26.1.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "modern-screenshot": "^4.6.6"
  }
}
